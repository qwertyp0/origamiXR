<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/origami_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/origami_design_background"/>

        <ImageView
            android:id="@+id/origami_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/origami_background"
            android:layout_alignTop="@id/origami_background"
            android:layout_alignRight="@id/origami_background"
            android:layout_alignBottom="@id/origami_background"
            android:layout_margin="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/airplane" />

        <ToggleButton
            android:id="@+id/bookmark_icon"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/origami_background"
            android:layout_alignRight="@+id/origami_background"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bookmark"
            android:button="@android:color/transparent"
            android:checked="false"
            android:textOff=""
            android:textOn=""/>

        <TextView
            android:id="@+id/origami_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/origami_background"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:text="Default"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/origami_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom text"
            android:layout_alignBottom="@+id/origami_background"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/origami_background"
            android:layout_alignRight="@+id/origami_background"
            android:paddingBottom="20dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </RelativeLayout>

</GridLayout>