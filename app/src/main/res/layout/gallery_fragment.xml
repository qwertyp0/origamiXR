                        android:textColor="@android:color/black"
                        android:textSize="8.5pt" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/gallery_image_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gallery_header_1"
                    android:layout_centerInParent="true"
                    android:src="@drawable/gallery_image_1" />
            </RelativeLayout>

            <!--End of first image in gallery-->

            <!--Start of second image in gallery-->

